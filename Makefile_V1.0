Qui fonctionne avec la première partie du parsing mais pas avec la mlx


NAME		=	cub3d.a

MLX			=	-lmlx -framework OpenGL -framework AppKit

LIBFT_PATH	=	libft/ #dans cub3d la libft doit être dans un dossier à la racine donc juste ./libft

CC			=	gcc

SRCS		=	srcs/check_map.c \
				srcs/print_error.c \
				srcs/init_map.c \
				srcs/init_map_utils.c \
				srcs/pars_map.c \
				srcs/pars_map2.c \
				srcs/ft_split_cub.c \
				srcs/init_ray.c \
				#srcs/ray.c \#
				
#%.o: %.c

OBJS		=	$(SRCS:.c=.o)

FLAGS		=	-c -Wall -Wextra -Werror #-Imlx -c $< -o $@ #ajouté -Imlx -c $< -o $@ #
#FLAGS		= $(MLX)#

HEADER		=	includes/cub3d.h
#KEYCODE 	=	includes/keycode.h#

all			:	$(NAME)

$(NAME) 	:	$(HEADER) $(OBJS)
				make -C $(LIBFT_PATH)
				cp ./libft/libft.a $(NAME)
				$(CC) $(FLAGS) $(SRCS)
				ar -rcs $(NAME) $(OBJS)
				ranlib $(NAME)

clean		:	
				make -C $(LIBFT_PATH) clean
				rm -rf $(OBJS)
				rm -rf *.o

fclean		:	clean
				make -C $(LIBFT_PATH) fclean
				rm -rf $(NAME)

re			:	fclean all

